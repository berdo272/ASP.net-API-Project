@model IEnumerable<API_project.Models.CustomOrderItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@if (User.IsInRole("admin"))
{
<p>
      @Html.ActionLink("Create New", "Create") 
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstimatedTimeOfCompletion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SellersNotes)
        </th>
        <th></th>
    </tr>


@foreach (var item in Model) {
   
     <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstimatedTimeOfCompletion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SellersNotes)
        </td>
     

        @if (User.IsInRole("admin"))
        {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
        }
    </tr>}

    

</table>
